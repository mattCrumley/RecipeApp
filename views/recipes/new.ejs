<% include ../partials/header %>


<div class="container">
	<div class="row">
	
		
		
		<div style="width:30%; margin:25px auto">

			<form id ="uploadRecipe" action="/recipes" method="POST">
				<h1 style="text-align:center">Upload a Recipe From the Web</h1>
				
				<div class="form-group">
					<input class="form-control" type="text" name = "Link" placeholder="Recipe url">
					
				</div>
				
				<div class="form-group">
					<input class="form-control" type="number" name = "rating" min=0, max=5, step= .5 placeholder="Rating from 1 to 5">
					
				</div>
	
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
					
				</div>

			</form>
			

			<form id = "createCustomRecipe" action="/recipes" method="POST">
				<h1 style="text-align:center">Create A Custom Recipe</h1>
				
				<div class="form-group">
					<input class="form-control" type="text" name = "name" placeholder="Recipe Name">
					
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name = "image" placeholder="Image URL">
					
				</div>
				
				<div class="form-group">
					<input class="form-control" type="number" name = "rating" min=0, max=5, step= .5 placeholder="Rating from 1 to 5">
					
				</div>
				
				<div class="form-group">

					<textarea class="form-control" type="text" name="ingredients" placeholder="Ingredients." cols="40" rows="10"></textarea>
					
				</div>
				
				<div class="form-group">
					
					<textarea class="form-control" type="text" name="instructions" placeholder="Instructions." cols="40" rows="10"></textarea>
					
				</div>
	
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
					
				</div>

			</form>
			
			<a href ="/recipes">Go Back</a>
		</div>
	

		
		
	</div>
	
</div>



<% include ../partials/footer %>