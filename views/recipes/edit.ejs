<% include ../partials/header %>


<div class="container">
	<div class="row">
	
		<h1 style="text-align:center">Edit <%= recipe.name %></h1>
		
		<div style="width:30%; margin:25px auto">
			<form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type = "text" name="recipe[name]" value="<%= recipe.name %>">
					
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name = "recipe[image]" value ="<%= recipe.image %>">
					
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name = "recipe[rating]" min=0, max=5, step= .5 placeholder="Rating from 1 to 5">
					
				</div>
				
				<div class="form-group">

					<textarea class="form-control" type="text" name="recipe[ingredients]" cols="40" rows="10"><%= recipe.ingredients %></textarea>

				</div>
				
				<div class="form-group">
					
					<textarea class="form-control" type="text" name="recipe[instructions]" cols="40" rows="10"><%= recipe.instructions %></textarea>
					
				</div>
	
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
					
				</div>

			</form>
			<a href ="/recipes">Go Back</a>
		</div>
	

		
		
	</div>
	
</div>

<% include ../partials/footer %>